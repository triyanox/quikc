{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "downlevelIteration": true,
    "importHelpers": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "pretty": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "declarationDir": "dist",
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "types"]
  },
  "include": ["packages/*/lib/**/*", "packages/*/types/**/*"],
  "exclude": ["node_modules", "dist"]
}
